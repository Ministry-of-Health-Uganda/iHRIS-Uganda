<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="RequestAccount-VerifyEmail">
  <metadata>
    <version>4.3.0.1</version>
  </metadata>
  <configurationGroup name="RequestAccount-VerifyEmail" locale="cs">
    <version>4.3.0.1</version>
    <configurationGroup name="user_request_class_data" path="/modules/forms/formClasses/I2CE_User_Request">
      <configurationGroup name="fields">
        <configurationGroup name="request_number">
          <configuration name="headers" type="delimited" locale="cs" values="single">
            <value>default:Ćíslo žádosti</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="verified">
          <configuration name="headers" type="delimited" locale="cs" values="single">
            <value>default:Email ověřen</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="email">
          <configuration name="headers" type="delimited" locale="cs" values="single">
            <value>default:E-mailová adresa</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="user_messages" locale="cs">
      <configuration name="verify_email" values="single" type="string">
        <value>Prosím zkontrolujte svůj email pro potvrzení Vaší e-mailové adresy (%s) pro přihlášení.</value>
      </configuration>
      <configuration name="verify_email_fail" values="single" type="string">
        <value>Došlo k potížím při odesílání e-mailu do (%s). Kontaktujte prosím Vašeho správce systému.</value>
      </configuration>
      <configuration name="verified" values="single" type="string">
        <value>Váš účet byl ověřen.</value>
      </configuration>
      <configuration name="not_verified" values="single" type="string">
        <value>Nemohli jsme ověřit Váš účet.</value>
      </configuration>
      <configuration name="invalid_username" values="single" type="string">
        <value>Požadované uživatelské jméno "%1$s" nebo email "%2$s" je neplatný nebo používán.</value>
      </configuration>
      <configuration name="invalid_email" path="/modules/forms/formfield_messages/user_request/email/invalid_email" values="single" type="string">
        <value>Prosím zadejte platnou emailovou adresu.</value>
      </configuration>
      <configuration name="email_subject" values="single" type="string">
        <value>Ověřit žádost o účet %1$s</value>
      </configuration>
      <configuration name="email_message" values="single" type="string">
        <value>Prosím ověřte Váš účet s uživatelským jménem "%1$s" kliknutím na odkaz %2$s Jakmile jste Váš účet ověřili, můžete použít odkaz výše pro přístup k %3$s. Vítejte v %3$s!</value>
      </configuration>
      <configuration name="email_message_verify_only" values="single" type="string">
        <value>Prosím ověřte Váš účet s uživatelským jménem "%1$s" kliknutím na odkaz %2$s Vítejte v %3$s.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="home">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="cs" type="string">
            <value>Zažádat o účet</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>